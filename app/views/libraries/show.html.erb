

<h2><%= @library.library_name %></h2>
<ul class="list-group">
  <li class="list-group-item">Address: <%= @library.address %></li>
  <li class="list-group-item">Phone: <%= @library.phone_number %></li>
</ul>

<h2>Books Index</h2>
<ul class="list-group">
  <% @books.each do |book| %>
    <li class="list-group-item tab-pane"><%= link_to book.title, book_path(book), :class => "" %></li>
  <% end %>
</ul>
